<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
    <head>
        <meta charset="utf-8" />
        <!-- Always force latest IE rendering engine (even in intranet) and Chrome Frame -->
        <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible" />
        <title>{{ apiName }}</title>
        {#<style type="text/css">
            {{ css|raw }}
        </style>
        <script type="text/javascript">
            {{ js|raw }}
        </script>#}
        {% block stylesheets %}
            <link href="{{ asset('bundles/rednoseframework/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" />
            <link href="{{ asset('bundles/rednoseframework/bootstrap/css/bootstrap-responsive.min.css') }}" rel="stylesheet" />
            <link href="{{ asset('bundles/rednoseapidoc/css/screen.css') }}" rel="stylesheet" />
        {% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('bundles/rednoseframework/jquery/jquery.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/rednoseframework/bootstrap/js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </head>
    <body data-spy="scroll" data-target=".rednose-apidoc-sidebar">
        <div class="navbar navbar-inverse">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand brand-navbar" href="{{ path('nelmio_api_doc_index') }}">{{ apiName }}</a>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="span3 rednose-apidoc-sidebar">
                    <ul class="rednose-apidoc-sidenav nav nav-list" data-spy="affix" data-offset-top="60">
                        {% block nav %}{% endblock %}
                    </ul>
                </div>
                <div class="span9">
                    <section>
                        {% include motdTemplate %}
                    </section>
                    <ul id="resources">
                        {% block content %}{% endblock %}
                    </ul>
                </div>
            </div>
        </div>

        <footer class="rednose-apidoc-footer">
            <div class="container">
                <p>Documentation auto-generated on {{ date }}</p>
            </div>
        </footer>
    </body>
</html>
